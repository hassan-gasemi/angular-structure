{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type: feature", "type:util", "type:ui"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui"]
              },
              {
                "sourceTag": "scope: orders",
                "onlyDependOnLibsWithTags": ["scope: orders","scope: products", "scope: shared", "scope: shared-ui"]
              },
              {
                "sourceTag": "scope: products",
                "onlyDependOnLibsWithTags": ["scope: products","scope: shared", "scope: shared-ui"]
              },
              {
                "sourceTag": "scope: shared",
                "onlyDependOnLibsWithTags": ["scope: shared"]
              },
              {
                "sourceTag": "scope: shared-ui",
                "onlyDependOnLibsWithTags": ["scope: shared-ui"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
